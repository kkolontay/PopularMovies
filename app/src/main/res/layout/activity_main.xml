<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recicler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/zeroMarging"
        android:layout_marginTop="@dimen/zeroMarging"
        android:layout_marginEnd="@dimen/zeroMarging"
        android:layout_marginBottom="@dimen/zeroMarging" />
    <ProgressBar
        android:layout_width= "@dimen/sizePrograssBar"
        android:layout_height="@dimen/sizePrograssBar"
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_gravity="center" />

</FrameLayout>